<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etSiteId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email da unidade (site_id)"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etDeviceIdGerado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:enabled="false"
            android:focusable="false"
            android:hint="device_id gerado automaticamente" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Servidor (app em background):" />

        <AutoCompleteTextView
            android:id="@+id/actServidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite para buscar app do Servidor"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="GelaFit GO (app kiosk fixo):" />

        <AutoCompleteTextView
            android:id="@+id/actGelaFitGo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite para buscar app do GelaFit GO"
            android:inputType="text" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Salvar configuracao" />

        <Button
            android:id="@+id/btnPermissaoAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Conceder admin do dispositivo" />

        <Button
            android:id="@+id/btnPermissaoBateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ignorar otimizacao de bateria" />

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Iniciar orquestrador 24/7" />

        <Button
            android:id="@+id/btnParar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Parar orquestrador" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="13sp" />
    </LinearLayout>
</ScrollView>
